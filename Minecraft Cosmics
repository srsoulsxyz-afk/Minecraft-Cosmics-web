  <script>
    // Remove loading overlay after small timeout (simula carregamento)
    window.addEventListener('DOMContentLoaded', ()=>{
      setTimeout(()=>{
        const el = document.getElementById('loading');
        if(!el) return;
        el.style.opacity = '0';
        setTimeout(()=>el.remove(),420);
      },780);
    });

    // ripple effect for touch/hover on buttons
    document.querySelectorAll('.btn-download').forEach(btn=>{
      btn.addEventListener('pointerdown', function(e){
        const r = this.querySelector('.ripple');
        if(!r) return;
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width,rect.height)*1.6;
        r.style.width = r.style.height = size + 'px';
        r.style.left = (e.clientX - rect.left - size/2) + 'px';
        r.style.top = (e.clientY - rect.top - size/2) + 'px';
        r.style.background = 'radial-gradient(circle at center, rgba(138,63,252,0.26), rgba(255,255,255,0.0))';
        r.style.transition = 'transform .6s cubic-bezier(.2,.9,.2,1), opacity .6s';
        r.style.transform = 'scale(1)';
        r.style.opacity = '1';

        setTimeout(()=>{
          r.style.transform = 'scale(1.8)';
          r.style.opacity = '0';
        },40);

        // Simula ação de download
        const href = this.getAttribute('data-href') || '#';
        if(href !== '#'){
          window.location.href = href;
        } else {
          // pulse animation to show success
          this.animate([
            {transform: 'translateY(0)'},
            {transform: 'translateY(-6px)'},
            {transform: 'translateY(0)'}
          ],{duration:420,easing:'cubic-bezier(.2,.9,.2,1)'});
        }
      });
    });
  </script>
